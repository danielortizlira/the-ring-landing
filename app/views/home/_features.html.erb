<section class="py-24 bg-white dark:bg-black">
  <div class="container mx-auto px-6">

    <div class="text-center mb-16">
      <h2
        class="
          text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-white mb-4
        "
      >
        <%= t("landing.features.main_title") %>
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        <%= t("landing.features.main_subtitle") %>
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">

      <div
        class="
          bg-gray-50 dark:bg-gray-900 p-8 rounded-xl shadow-lg border border-gray-200
          dark:border-gray-800
        "
      >
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          <%= t("landing.features.boxers_block.title") %>
        </h3>
        <div class="space-y-6">
          <% ['technique', 'endurance', 'power', 'plans'].each do |feature| %>
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 bg-red-100 dark:bg-red-900/50 p-2 rounded-full">
                <%# SVG Icons for Boxer Block %>
                <% case feature %>
                <% when 'technique' %>
                  <svg
                    class="h-6 w-6 text-red-500 dark:text-red-400"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.82m5.84-2.56a12.025 12.025 0 01-4.25 6.01M15.59 14.37a12.025 12.025 0 00-4.25 6.01M19.11 10.37a12.025 12.025 0 01-4.25 6.01M19.11 10.37c-.38.82-.82 1.6-1.32 2.32M19.11 10.37a12.015 12.015 0 00-4.474-5.33M15.59 14.37a12.036 12.036 0 00-4.474-5.33"
                    />
                  </svg>
                <% when 'endurance' %>
                  <svg
                    class="h-6 w-6 text-red-500 dark:text-red-400"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"
                    />
                  </svg>
                <% when 'power' %>
                  <svg
                    class="h-6 w-6 text-red-500 dark:text-red-400"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M15.042 21.672L13.684 16.6m0 0l-2.51 2.225.569-9.47 5.227 7.917-3.286-.672zm-7.518-.267A8.25 8.25 0 1120.25 10.5M8.288 14.212A8.25 8.25 0 1110.5 20.25"
                    />
                  </svg>
                <% when 'plans' %>
                  <svg
                    class="h-6 w-6 text-red-500 dark:text-red-400"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    />
                  </svg>
                <% end %>
              </div>
              <div>
                <h4 class="font-bold text-gray-800 dark:text-gray-100">
                  <%= t("landing.features.boxers_block.items.#{feature}.title") %>
                </h4>
                <p class="text-gray-600 dark:text-gray-400">
                  <%= t("landing.features.boxers_block.items.#{feature}.description") %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div
        class="
          bg-gray-50 dark:bg-gray-900 p-8 rounded-xl shadow-lg border border-gray-200
          dark:border-gray-800
        "
      >
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          <%= t("landing.features.fitness_block.title") %>
        </h3>
        <div class="space-y-6">
          <% ['burn', 'anywhere', 'strength', 'motivation'].each do |feature| %>
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 bg-teal-100 dark:bg-teal-900/50 p-2 rounded-full">
                <%# SVG Icons for Fitness Block %>
                <% case feature %>
                <% when 'burn' %>
                  <svg
                    class="h-6 w-6 text-teal-500 dark:text-teal-400"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M15.362 5.214A8.252 8.252 0 0112 21 8.25 8.25 0 016.038 7.048 8.287 8.287 0 009 9.6a8.983 8.983 0 013.361-6.867 8.21 8.21 0 003 2.48z"
                    />
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M12 18a3.75 3.75 0 00.495-7.467 5.99 5.99 0 00-1.925 3.546 5.974 5.974 0 01-2.133-1A3.75 3.75 0 0012 18z"
                    />
                  </svg>
                <% when 'anywhere' %>
                  <svg
                    class="h-6 w-6 text-teal-500 dark:text-teal-400"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3"
                    />
                  </svg>
                <% when 'strength' %>
                  <svg
                    class="h-6 w-6 text-teal-500 dark:text-teal-400"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M12.75 8.25v-1.5a2.25 2.25 0 00-2.25-2.25H9.75a2.25 2.25 0 00-2.25 2.25v1.5m0 0l3 3m0 0l3-3m-3 3v1.5m6-4.5v-1.5a2.25 2.25 0 00-2.25-2.25H15a2.25 2.25 0 00-2.25 2.25v1.5m0 0l3 3m0 0l3-3m-3 3v1.5"
                    />
                  </svg>
                <% when 'motivation' %>
                  <svg
                    class="h-6 w-6 text-teal-500 dark:text-teal-400"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M16.5 18.75h-9a9.75 9.75 0 100-13.5h9a9.75 9.75 0 100 13.5z"
                    />
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M12.75 5.25v-1.5A2.25 2.25 0 0010.5 1.5h-1.5A2.25 2.25 0 006.75 3.75v1.5m0 0V21m0 0h-1.5a2.25 2.25 0 01-2.25-2.25v-1.5"
                    />
                  </svg>
                <% end %>
              </div>
              <div>
                <h4 class="font-bold text-gray-800 dark:text-gray-100">
                  <%= t("landing.features.fitness_block.items.#{feature}.title") %>
                </h4>
                <p class="text-gray-600 dark:text-gray-400">
                  <%= t("landing.features.fitness_block.items.#{feature}.description") %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</section>
