<div class="bg-white text-gray-900">
  <!-- Hero Section -->
  <section
    class="
      min-h-screen flex flex-col items-center justify-center text-center px-6
    "
  >
    <img src="<%= asset_path('logo.svg') %>" alt="App Logo" class="h-40 mb-6">
    <h1 class="text-4xl font-bold mb-4"><%= t("landing.hero.headline") %></h1>
    <p class="text-lg text-gray-600 mb-6 max-w-xl"><%= t("landing.hero.description") %></p>
    <div class="flex flex-col sm:flex-row gap-4">
      <button
        class="
          bg-gray-300 text-gray-700 px-6 py-3 rounded-lg cursor-not-allowed
        "
      >
        <%= t("landing.hero.cta_ios") %>
      </button>
      <button
        class="
          bg-gray-300 text-gray-700 px-6 py-3 rounded-lg cursor-not-allowed
        "
      >
        <%= t("landing.hero.cta_android") %>
      </button>
    </div>
  </section>
  <!-- Features Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-4xl mx-auto text-center px-6">
      <h2 class="text-3xl font-semibold mb-10"><%= t("landing.features.title") %></h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 text-left">
        <% t("landing.features.items").each do |feature| %>
          <div class="p-6 bg-white rounded-2xl shadow">
            <p class="text-lg text-gray-700"><%= feature %></p>
          </div>
        <% end %>
      </div>
    </div>
  </section>
  <!-- Final CTA -->
  <section class="py-20 text-center px-6">
    <h2 class="text-3xl font-semibold mb-4"><%= t("landing.final_cta.title") %></h2>
    <p class="text-gray-600 mb-6"><%= t("landing.final_cta.description") %></p>
    <form class="max-w-md mx-auto flex gap-2">
      <input
        type="email"
        placeholder="Your email"
        class="flex-1 px-4 py-3 border rounded-lg"
      >
      <button class="bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700">
        <%= t("landing.final_cta.cta") %>
      </button>
    </form>
  </section>

</div>
