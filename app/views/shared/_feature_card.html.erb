<div
  class="
    group relative flex h-72 cursor-pointer flex-col justify-end overflow-hidden
    rounded-lg shadow-lg transition-transform hover:scale-105
  "
>
  <img
    src="<%= asset_path(key + '.jpg') %>"
    alt="<%= t("landing.features.items.#{key}.title") %>"
    class="absolute inset-0 h-full w-full object-cover"
  />

  <div
    class="
      absolute inset-0 bg-gradient-to-t from-black/80 to-transparent transition-colors
      group-hover:from-black/90
    "
  ></div>

  <div class="relative z-10 p-6 text-white">
    <h4 class="text-lg font-bold">
      <%= t("landing.features.items.#{key}.title") %>
    </h4>
    <p class="mt-1 text-gray-200">
      <%= t("landing.features.items.#{key}.description") %>
    </p>
  </div>
</div>
